<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--View Pager-->
    <style name="TabSlidingPager" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="pstsShouldExpand">true</item>
        <item name="pstsIndicatorColor">@color/chat_sdk_theme_color</item>
        <item name="background">@drawable/background_tab</item>
        <item name="pstsTabPaddingLeftRight">0dp</item>
        <item name="pstsIndicatorHeight">2dp</item>
        <item name="pstsTextAllCaps">true</item>
    </style>


</resources>
